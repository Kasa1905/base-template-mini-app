# ProofVault Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Redis (for caching and session management)
KV_REST_API_TOKEN=''
KV_REST_API_URL=''

# Farcaster/Neynar Configuration
NEYNAR_API_KEY=  
NEYNAR_CLIENT_ID= #If using neynar for notification
NEYNAR_SIGNER_UUID=

# Base Network Configuration
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_EXPLORER_URL=https://sepolia-explorer.base.org

# Smart Contract Addresses (Deploy contracts first, then add addresses here)
NEXT_PUBLIC_PROOFVAULT_CONTRACT_ADDRESS=
PRIVATE_KEY=

# IPFS Configuration (for credential storage)
WEB3_STORAGE_TOKEN=
PINATA_API_KEY=
PINATA_SECRET_API_KEY=

# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=
NEXT_PUBLIC_CDP_API_KEY=

# Manifest 
ACCOUNT_ASSOCIATION_HEADER=
ACCOUNT_ASSOCIATION_PAYLOAD=
ACCOUNT_ASSOCIATION_SIGNATURE=

# ProofVault Mini App Configuration
NEXT_PUBLIC_URL='https://localhost:3000'
NEXT_PUBLIC_FRAME_NAME='ProofVault'
NEXT_PUBLIC_FRAME_DESCRIPTION='Decentralized Credential Verification on Base'
NEXT_PUBLIC_FRAME_PRIMARY_CATEGORY='utility'
NEXT_PUBLIC_FRAME_TAGS='credentials,verification,base,blockchain'
NEXT_PUBLIC_FRAME_BUTTON_TEXT='Open ProofVault'
NEXT_PUBLIC_ANALYTICS_ENABLED='true'
NEXT_PUBLIC_USE_WALLET="true"
USE_TUNNEL="true"

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_secure_webhook_token

# Database (Optional - for production caching)
DATABASE_URL=
MONGODB_URI=mongodb://localhost:27017/proofvault

# Multi-Chain Configuration
DEFAULT_CHAIN=solana
PRIVACY_ENABLED=true

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_DEVNET_RPC=https://api.devnet.solana.com
SOLANA_MAINNET_RPC=https://api.mainnet-beta.solana.com
# SOLANA_PRIVATE_KEY=[1,2,3...] # Array of private key bytes - KEEP SECRET

# zkSync Configuration (for Privacy Features)
ZKSYNC_NETWORK=sepolia
ZKSYNC_SEPOLIA_RPC=https://sepolia.era.zksync.dev
ZKSYNC_MAINNET_RPC=https://mainnet.era.zksync.io
